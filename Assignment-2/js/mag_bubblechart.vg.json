{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Magnitude over time",
  "data": {
    "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/data/earthquake_1995-2023.csv"
  },
  "transform": [
    {
      "calculate": "datum.continent === '' ? 'No assigned continent' : datum.continent",
      "as": "Continent"
    }
  ],
  "mark": "circle",
  "encoding": {
    "y": {
      "field": "magnitude",
      "type": "quantitative",
      "scale": {
        "zero": false
      }
    },
    "x": {
      "timeUnit": "year",
      "field": "date_time",
      "title": "Year",
      "axis": {
        "format": "%Y"
      },
      "type": "temporal"
    },
    "size": {
      "field": "sig",
      "title": "Significance",
      "type": "quantitative"
    },
    "color": {
      "field": "Continent",
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "title"
      },
      {
        "field": "date_time",
        "title": "Date and time"
      },
      {
        "field": "magnitude",
        "type": "quantitative",
        "title": "Magnitude"
      },
      {
        "field": "depth",
        "title": "Depth"
      },
      {
        "field": "longitude",
        "title": "Longitude"
      },
      {
        "field": "latitude",
        "title": "Latitude"
      },
      {
        "field": "sig",
        "title": "Event significance rating"
      }
    ]
  }
}