{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Yearly earthquake count from 1995 to 2023",
  "width": 1100,
  "height": 100,
  "data": {
    "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/data/earthquake_1995-2023.csv"
  },
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "date_time",
      "title": "Year",
      "axis": {"format": "%Y"},
      "type": "temporal"
    },
    "y": {
      "aggregate": "count",
      "field": "magnitude",
      "title": "Earthquake count",
      "type": "quantitative",
      "scale": {"domain": [0, 40]}
    },
    "color": {
      "field": "magnitude",
      "title": "Magnitude scale",
      "scale": {
        "type": "threshold",
        "domain": [7, 8, 9], 
        "range": ["#fc8d59", "#ef6548", "#d7301f", "#7f0000"]
      }
    }
  }
}
  