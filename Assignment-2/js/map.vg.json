{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Earthquakes across the world from 1995 to 2023",
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#252525",
        "stroke": ""
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/js/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#636363"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#969696"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/data/earthquake_1995-2023.csv"
      },
      "mark": {
        "type": "circle",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "color": {
          "field": "magnitude",
          "type": "quantitative",
          "title": "Severity scale",
          "scale": {
            "type": "threshold",
            "domain": [
              7,
              8,
              9
            ],
            "range": [
              "#fc8d59",
              "#ef6548",
              "#d7301f",
              "#7f0000"
            ]
          }
        },
        "tooltip": [
          {
            "field": "title"
          },
          {
            "field": "date_time",
            "title": "Date and time"
          },
          {
            "field": "magnitude",
            "type": "quantitative",
            "title": "Magnitude"
          },
          {
            "field": "depth",
            "title": "Depth"
          },
          {
            "field": "longitude",
            "title": "Longitude"
          },
          {
            "field": "latitude",
            "title": "Latitude"
          },
          {
            "field": "sig",
            "title": "Event significance rating"
          }
        ]
      }
    }
  ]
}