{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 250,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/data/earthquake_1995-2023.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "as": "Count"
        }
      ],
      "groupby": ["continent"]
    },
    {
      "calculate": "datum.continent === '' ? 'No assigned continent' : datum.continent",
      "as": "Continent"
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Count",
          "as": "total_count"
        }
      ]
    },
    {
      "calculate": "datum.Count / datum.total_count * 100",
      "as": "Percentage"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50
      },
      "encoding": {
        "theta": {
          "field": "Count",
          "type": "quantitative",
          "stack": "normalize"
        },
        "color": {
          "field": "Continent",
          "type": "nominal"
        },
        "tooltip": [
          {
            "field": "Continent",
            "type": "nominal"
          },
          {
            "field": "Percentage",
            "type": "quantitative",
            "format": ".1f",
            "title": "Percentage (%)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "Continent",
        "fontSize": 15,
        "fontWeight": 600,
        "baseline": "middle",
        "align": "center",
        "dy": -10
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "Distribution",
        "fontSize": 15,
        "fontWeight": 600,
        "baseline": "middle",
        "align": "center",
        "dy": 10
      }
    }
  ],
  "config": {
    "background": "transparent",
    "view": { "stroke": "transparent" }
  }
}
