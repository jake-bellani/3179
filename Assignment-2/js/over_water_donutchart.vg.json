{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Earthquakes occurring over different regions",
  "data": {
    "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/data/earthquake_1995-2023.csv"
  },
  "transform": [
    {
      "aggregate": [
        {"op": "count", "as": "Count"},
        {"op": "sum", "field": "Count", "as": "total_count"}
      ],
      "groupby": ["tsunami"]
    },
    {
      "calculate": "datum.tsunami == 1 ? 'Water' : 'Land'",
      "as": "Region"
    },
    {
      "calculate": "datum.Count / datum.total_count * 100",
      "as": "Percentage"
    }
  ],  
  "mark": {"type": "arc", "innerRadius": 50},
  "encoding": {
    "theta": {"field": "Count", "type": "quantitative", "stack": "normalize"},
    "color": {"field": "Region", "type": "nominal"},
    "tooltip": [
      {"field": "Region", "type": "nominal"}, 
      {"field": "Count", "type": "quantitative"},
      {"field": "Percentage", "type": "quantitative"}
    ]
  },  
  "config": {
    "view": {"stroke": "transparent"}
  }
}
