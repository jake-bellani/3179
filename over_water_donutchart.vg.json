{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Earthquakes occurring over oceanic regions",
    "data": {
        "url": "https://raw.githubusercontent.com/jake-bellani/3179/main/Week9-homework/data/earthquake_1995-2023.csv"
        },
    "transform": [
      {
        "aggregate": [
          {"op": "count", "as": "count"}
        ],
        "groupby": ["tsunami"]
      },
      {
        "calculate": "datum.tsunami == 1 ? 'Water' : 'Land'",
        "as": "Region"
      }
  ],
        "encoding": {
        "theta": {"field": "count", "type": "quantitative"},
        "color": {"field": "Region", "type": "nominal"},
        "tooltip": [{"field": "Region", "type": "nominal"}, {"field": "count", "type": "quantitative"}]
        },
        "layer": [
        {
            "mark": {"type": "arc", "innerRadius": 50},
            "encoding": {
            "theta": {"field": "count", "type": "quantitative"},
            "color": {"field": "Region", "type": "nominal"},
            "tooltip": [{"field": "Region", "type": "nominal"}, {"field": "count", "type": "quantitative"}]
            }
        }
        ],
        "config": {
        "view": {"stroke": "transparent"}
        }
    
  }
  